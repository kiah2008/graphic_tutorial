{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "push to devices",
            "type": "shell",
            "command": "rsync ${workspaceFolder}/output/${input:componentType}  pi@$IP_ADDR:/home/pi/demo/",
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "curl -X POST -d \"/home/pi/demo/${input:componentType}\" $IP_ADDR:8088/sh",
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        }
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "componentType",
            "description": "What type of component do you want to create?",
            "options": [
                "http-cs",
                "triangle",
                "x11window"
            ],
            "default": ""
        },
        {
            "type": "pickString",
            "id": "media_name",
            "description": "select file to be pushed to device?",
            "options": [
                "sine_s16_mono_48000.wav",
                "sine_s16_mono_48000.pcm"
            ],
            "default": ""
        },
        {
            "type": "promptString",
            "id": "test_case",
            "description": "input num to run case?",
            "default": "0"
        }
    ]
}